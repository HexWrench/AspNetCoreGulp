<!doctype html>
<html lang="">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - TestWebApp</title>

        <environment names="Development">
            <link rel="stylesheet" href="~/dev/lib/bootstrap/dist/css/bootstrap.css" />
            <link rel="stylesheet" href="~/dev/css/site.css" />
        </environment>
        <environment names="Staging,Production">
            <link rel="stylesheet" href="~/lib/css/lib.min.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/site.min.css" asp-append-version="true" />
        </environment>
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">TestWebApp</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Home" asp-action="About">About</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2016 - TestWebApp</p>
            </footer>
        </div>

        <environment names="Development">
            <script src="~/dev/lib/jquery/dist/jquery.js"></script>
            <script src="~/dev/lib/bootstrap/dist/js/bootstrap.js"></script>
            <script src="~/dev/js/tools.js"></script>
            <script src="~/dev/js/b.js"></script>
            <script src="~/dev/js/a.js"></script>
            <script src="~/dev/js/f1/Greeter.js"></script>
        </environment>
        <environment names="Staging,Production">
            <script src="~/lib/js/lib.min.js" asp-append-version="true"></script>
            <script src="~/site.min.js" asp-append-version="true"></script>
        </environment>

        @RenderSection("scripts", required: false)
    </body>
</html>
